<p id="notice"><%= notice %></p>

<h1>Listing Members</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>User</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.user %></td>
        <td><%= member.user_id %></td>
        <td><%= member.score %></td>
        <td><%= link_to 'Show', member %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Member', new_member_path %>

<table>
  <thead>
    <tr>
      <th>Chore List</th>
    </tr>
  </thead>

  <tbody>
    <% @chorelists.each do |chorelist| %>
      <tr>
        <td><%= chorelist.name %></td>
        <td><%= chorelist.created_at %></td>
        <td><%= chorelist.winner %></td>
        <td><%= link_to 'Show', chorelists_path %></td>
        <td><%= link_to 'Edit', edit_chorelist_path(chorelist) %></td>
        <td><%= link_to 'Destroy', chorelists_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


